<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- Initial -->
    <changeSet author="vynaloze" id="2">
        <!--stats-->
        <createTable tableName="stats">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="timestamp" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="datasource_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_ds_stats" references="datasources(id)"/>
            </column>
            <column name="type" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="stats" indexName="idx_pk_stats" unique="true">
            <column name="id"/>
        </createIndex>

        <createIndex tableName="stats" indexName="idx_fk_ds_stats" unique="false">
            <column name="datasource_id"/>
        </createIndex>

        <createIndex tableName="stats" indexName="idx_stats_ts" unique="false">
            <column name="timestamp"/>
        </createIndex>

        <createIndex tableName="stats" indexName="idx_stats_ts_name" unique="false">
            <column name="timestamp"/>
            <column name="type"/>
        </createIndex>

        <!--rows-->
        <createTable tableName="rows">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="stat_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_stats_rows" references="stats(id)"/>
            </column>
        </createTable>

        <createIndex tableName="rows" indexName="idx_pk_rows" unique="true">
            <column name="id"/>
        </createIndex>

        <createIndex tableName="rows" indexName="idx_fk_stats_rows" unique="false">
            <column name="stat_id"/>
        </createIndex>

        <!--values-->
        <createTable tableName="vals">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="row_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_rows_values" references="rows(id)"/>
            </column>
            <column name="key" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="BINARY">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="vals" indexName="idx_pk_values" unique="true">
            <column name="id"/>
        </createIndex>

        <createIndex tableName="vals" indexName="idx_fk_rows_values" unique="false">
            <column name="row_id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>