<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- Initial -->
    <changeSet author="vynaloze" id="2">
        <createTable tableName="pg_stat_activity">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="timestamp" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="datasource" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_ds_stats" references="datasources(id)"/>
            </column>
            <column name="datid" type="INT">
            </column>
            <column name="datname" type="VARCHAR">
            </column>
            <column name="pid" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="usesysid" type="INT">
            </column>
            <column name="usename" type="VARCHAR">
            </column>
            <column name="client_addr" type="VARCHAR">
            </column>
            <column name="client_hostname" type="VARCHAR">
            </column>
            <column name="datid" type="INT">
            </column>
            <column name="backend_start" type="TIME">
            </column>
            <column name="xact_start" type="TIME">
            </column>
            <column name="query_start" type="TIME">
            </column>
            <column name="state_change" type="TIME">
            </column>
            <column name="wait_event_type" type="VARCHAR">
            </column>
            <column name="wait_event" type="VARCHAR">
            </column>
            <column name="waiting" type="BOOLEAN">
            </column>
            <column name="state" type="VARCHAR">
            </column>
            <column name="backend_xid" type="INT">
            </column>
            <column name="backend_xmin" type="INT">
            </column>
            <column name="query" type="VARCHAR">
            </column>
            <column name="backend_type" type="VARCHAR">
            </column>

        </createTable>

        <createIndex tableName="stats" indexName="idx_pk_pg_stat_activity" unique="true">
            <column name="id"/>
        </createIndex>

        <createIndex tableName="stats" indexName="idx_fk_ds_pg_stat_activity" unique="false">
            <column name="datasource_id"/>
        </createIndex>

        <createIndex tableName="stats" indexName="idx_pg_stat_activity_ts" unique="false">
            <column name="timestamp"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>